with-vendor-prefix(key, value, prefix-list = -webkit- -moz- -ms- -o- '') {
    for prefix in prefix-list {
        {prefix}{key}: value;
    }
}

* {
    with-vendor-prefix(box-sizing, border-box, -webkit- -moz- '');
}

html {
    width: 100%;
    padding: 0;
    margin: 0;
    background-color: #ffffff;
}

body {
    width: 100%;
    height: 100%;
    padding: 1em;
    margin: 0;
    font-family: "Alegreya", Palatino, Georgia, serif;
    color: #444444;
}

a {
    color: #4183C4;
    text-decoration: none;
    cursor: pointer;
    &:hover, &:visited:hover {
        color: darken(#4183C4, 30%);
    }
    &:visited {
        color: lighten(#4183C4, 15%);
    }
}

.center {
    width: 100%;
    text-align: center;
}

#loader {
    @extend .center;
    font-family: "Alegreya SC", Palatino, Georgia, serif;
    font-weight: normal;
    font-size: 2em;
    with-vendor-prefix(animation, fadeInOut 2s infinite alternate linear);
}

@keyframes fadeInOut {
    0% { opacity: 0.25; }
    100% { opacity: 1; }
}

body>section {
    padding: 0.809em;
    max-width: 30em;
    margin: auto;
    &>header {
        margin-bottom: 20px;
    }
    &>article {
        &>h1:first-child {
            margin-top: 0;
        }
        h1, h2, h3, h4, h5, h6 {
            font-weight: normal;
            color: black;
        }
        ul, ol {
            list-style-position: outside;
            padding: 0;
        }
        blockquote {
            margin: 0;
            padding-left: 1em;
            border-left: 1px solid #aaa;
        }
        img, object, video, audio, figure, iframe {
            max-width: 100%;
            height: auto;
        }
        code {
            font-size: 0.8em;
        }
    }
}

@media all and (min-width: 33.236em) {
    @media screen and (min-width: 30em) and (max-width: 63.236em) {
        body>section {
            width: 30em;
        }
    }
    body>section {
        padding: 1.618em;
        margin: 0 auto;
        max-width: 63.236rem;
        font-size: 1.25em;
    }
}
